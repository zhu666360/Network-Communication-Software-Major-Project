<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.sipclient.gui.controller.SettingsController"
      prefWidth="500" prefHeight="600"
      spacing="15" stylesheets="@../css/style.css"
      styleClass="root">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- 标题 -->
    <Label text="设置" styleClass="title-label"/>
    <Separator/>
    
    <!-- 通知设置 -->
    <VBox spacing="10" styleClass="card">
        <Label text="通知设置" styleClass="header-label"/>
        <CheckBox fx:id="notificationCheckBox" text="启用桌面通知"/>
        <CheckBox fx:id="soundCheckBox" text="启用提示音"/>
    </VBox>
    
    <!-- 音频设置 -->
    <VBox spacing="10" styleClass="card">
        <Label text="音频设置" styleClass="header-label"/>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="音量:"/>
            <Slider fx:id="volumeSlider" prefWidth="200" min="0" max="100" value="80"/>
            <Label fx:id="volumeLabel" text="80%" prefWidth="50"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="输入设备（麦克风）:" prefWidth="130"/>
            <ComboBox fx:id="inputDeviceComboBox" prefWidth="250" styleClass="combo-box"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="输出设备（扬声器）:" prefWidth="130"/>
            <ComboBox fx:id="outputDeviceComboBox" prefWidth="250" styleClass="combo-box"/>
        </HBox>
    </VBox>
    
    <!-- 其他设置 -->
    <VBox spacing="10" styleClass="card">
        <Label text="其他设置" styleClass="header-label"/>
        <CheckBox fx:id="autoStartCheckBox" text="开机自动启动"/>
        <CheckBox fx:id="saveHistoryCheckBox" text="保存聊天记录"/>
    </VBox>
    
    <!-- 填充空间 -->
    <Region VBox.vgrow="ALWAYS"/>
    
    <!-- 按钮区域 -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="重置" onAction="#handleReset" 
                styleClass="button, danger-button"/>
        <Button fx:id="cancelButton" text="取消" onAction="#handleCancel"
                styleClass="button, secondary-button"/>
        <Button fx:id="saveButton" text="保存" onAction="#handleSave"
                styleClass="button, success-button"/>
    </HBox>
</VBox>
