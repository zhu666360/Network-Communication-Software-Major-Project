<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.sipclient.gui.controller.LoginController"
      spacing="20" alignment="CENTER" prefWidth="450" prefHeight="500"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- 标题 -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="SIP 通讯客户端" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
        <Label text="请输入登录信息" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
    </VBox>

    <!-- 登录表单 -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>

        <VBox spacing="5">
            <Label text="SIP URI" style="-fx-font-weight: bold;"/>
            <TextField fx:id="sipUriField" promptText="例如: sip:101@10.29.133.174:5060"
                      style="-fx-font-size: 14px; -fx-padding: 10;"/>
        </VBox>

        <VBox spacing="5">
            <Label text="密码" style="-fx-font-weight: bold;"/>
            <PasswordField fx:id="passwordField" promptText="输入密码"
                          style="-fx-font-size: 14px; -fx-padding: 10;"/>
        </VBox>

        <VBox spacing="5">
            <Label text="本地 IP" style="-fx-font-weight: bold;"/>
            <TextField fx:id="localIpField" promptText="例如: 192.168.1.100"
                      style="-fx-font-size: 14px; -fx-padding: 10;"/>
        </VBox>

        <VBox spacing="5">
            <Label text="本地端口" style="-fx-font-weight: bold;"/>
            <TextField fx:id="localPortField" promptText="例如: 5061"
                      style="-fx-font-size: 14px; -fx-padding: 10;"/>
        </VBox>
    </VBox>

    <!-- 状态和按钮 -->
    <VBox spacing="15" alignment="CENTER">
        <HBox spacing="10" alignment="CENTER">
            <ProgressIndicator fx:id="progressIndicator" prefWidth="20" prefHeight="20"/>
            <Label fx:id="statusLabel" text="" style="-fx-font-size: 13px;"/>
        </HBox>

        <Button fx:id="loginButton" text="登录" onAction="#handleLogin"
                prefWidth="200" prefHeight="40"
                style="-fx-background-color: #0084ff; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 20;"/>
    </VBox>
</VBox>
